<Window x:Class="LogoFX.Tools.Templates.Wizard.Views.WizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModel="clr-namespace:LogoFX.Tools.Templates.Wizard.ViewModel"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:commanding="clr-namespace:LogoFX.Client.Mvvm.Commanding;assembly=LogoFX.Client.Mvvm.Commanding.Platform"
        mc:Ignorable="d"
        Width="400"
        Height="240"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Title="{Binding Path=Title, Mode=OneWay}"
        d:DesignHeight="300" 
        d:DesignWidth="300"
        d:DataContext="{d:DesignInstance viewModel:WizardViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        
        <CheckBox Grid.Row="0"
                  Content="Fake data support"
                  IsChecked="{Binding Path=FakeData, Mode=TwoWay}"
                  VerticalAlignment="Center" />

        <CheckBox Grid.Row="1"
                  Content="Tests"
                  IsChecked="{Binding Path=Tests, Mode=TwoWay}"
                  VerticalAlignment="Center" />

        <Button Grid.Row="2"
                Width="100"
                Height="24"
                Content="Ok"
                IsDefault="True"
                Click="OkClick"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center">
        </Button>
    </Grid>
</Window>
